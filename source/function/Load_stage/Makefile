## Executable ##
CC			=CCPSX
ASM			=ASMPSX
LINK		=SLINK

## Commandline ##
CCOPT		=-c -O2 -G0 -mgpopt -ansi -Wall -comments-c++ -Wa,sOVERLAY -nostdlib
ASMOPT		=/l /o c+ /o an+ /o w+ /zd /x
LINKOPT		=/psx /c /p
PARSER		=parser "OBJ\\PSX\\BUILD\\LOADSTAGE.MAP" "OBJ\\PSX\\BUILD\\LOADSTAGE.S"

## Project ##
all: build
build:
	$(CC) $(CCOPT) "LOAD_STAGE.CPP" -o"OBJ\\PSX\\BUILD\\LOAD_STAGE.OBJ"
	$(ASM) $(ASMOPT) ../../ASSEMBLY/BIO2.S,OBJ/PSX/BUILD/BIO2.OBJ
	$(LINK) $(LINKOPT) @MAKEFILE.LINK,OBJ/PSX/BUILD/LOADSTAGE.CPE,OBJ/PSX/BUILD/LOADSTAGE.SYM,OBJ/PSX/BUILD/LOADSTAGE.MAP
	$(PARSER)
rebuild: clean | all
clean:
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.BIN"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.CPE"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.MAP"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.OBJ"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.SYM"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADSTAGE.S"