## Executable ##
CC		=CCPSX
ASM		=ASMPSX
LINK	=SLINK

## Commandline ##
CCOPT		=-c -O2 -G0 -mgpopt -ansi -Wall -comments-c++ -Wa,sOVERLAY -nostdlib
ASMOPT		=/l /o c+ /o an+ /o w+ /zd /x
LINKOPT		=/psx /c /p
PARSER		=parser "OBJ\\PSX\\BUILD\\LOADPLWTABLE.MAP" "OBJ\\PSX\\BUILD\\LOADPLWTABLE.S"

## Project ##
all: build
build:
	$(CC) $(CCOPT) "LOAD_PLW_INDEX.CPP" -o"OBJ\\PSX\\BUILD\\LOAD_PLW_INDEX.OBJ"
	$(ASM) $(ASMOPT) ../../ASSEMBLY/BIO2.S,OBJ/PSX/BUILD/BIO2.OBJ
	$(LINK) $(LINKOPT) @MAKEFILE.LINK,OBJ/PSX/BUILD/LOADPLWTABLE.CPE,OBJ/PSX/BUILD/LOADPLWTABLE.SYM,OBJ/PSX/BUILD/LOADPLWTABLE.MAP
	$(PARSER)
rebuild: clean | all
clean:
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.BIN"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.CPE"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.MAP"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.OBJ"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.SYM"
	echo Y | DEL "OBJ\\PSX\\BUILD\\LOADPLWTABLE.S"