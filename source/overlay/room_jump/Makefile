## Executable ##
CC			=CCPSX
ASM			=ASMPSX
LINK		=SLINK

## Commandline ##
CCOPT		=-c -O2 -G0 -mgpopt -ansi -Wall -comments-c++ -Wa,sOVERLAY -nostdlib
ASMOPT		=/l /o c+ /o an+ /o w+ /zd /x
LINKOPT		=/psx /c /p
PARSER		=parser "OBJ\\PSX\\BUILD\\ROOMJUMP.MAP" "OBJ\\PSX\\BUILD\\ROOMJUMP.S"

## Project ##
all: build
build:
	$(CC) $(CCOPT) "../../COMMON/COMMON.CPP" -o"OBJ\\PSX\\BUILD\\COMMON.OBJ"
	$(CC) $(CCOPT) "ROOMJUMP.CPP" -o"OBJ\\PSX\\BUILD\\ROOMJUMP.OBJ"
	$(ASM) $(ASMOPT) ../../ASSEMBLY/BIO2.S,OBJ/PSX/BUILD/BIO2.OBJ
	$(LINK) $(LINKOPT) @MAKEFILE.LINK,OBJ/PSX/BUILD/ROOMJUMP.CPE,OBJ/PSX/BUILD/ROOMJUMP.SYM,OBJ/PSX/BUILD/ROOMJUMP.MAP
	$(PARSER)
rebuild: clean | all
clean:
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.BIN"
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.CPE"
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.MAP"
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.OBJ"
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.SYM"
	echo Y | DEL "OBJ\\PSX\\BUILD\\ROOMJUMP.S"